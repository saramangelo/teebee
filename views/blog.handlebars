<div class="text-center">
  <h2>{{blog.post_title}}</h2>
  <div id="blog" data-id="{{id}}">
    <p>{{blog.contents}}</p>
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1"></label>
    <textarea
      placeholder="Type your comment here..."
      class="form-control comment"
      id="comment"
      rows="3"
    ></textarea>
  </div>
  <br />

  {{#each comments as |comment|}}
    <li class="list-group-item">{{comments.comments}}<p>-{{user.name}}</p><p
      >{{format_date comments.date_created}}</p></li>
  {{/each}}
  <div class="form-group">
    <button id="button" class="btn btn-dark">
      Comment on this blog!
    </button>
  </div>

</div>
<script src="/js/dashboard.js"></script>
<script src="/js/comments.js"></script>