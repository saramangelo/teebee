<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

{{>blog-form}}

  {{#if blogs.length}}
    <div class="col-md-6 blog-list">
      <h3>Current Blogs:</h3>

      {{#each blogs as |blog|}}
        <div class="row mb-2">
       
            <a href="/blog/{{blog.id}}"><h4>{{blog.post_title}}</h4></a>
     
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-warning edit-btn"
              data-id="{{blog.id}}"
            >EDIT</button>
            <button
              class="btn btn-sm btn-danger delete-btn"
              data-id="{{blog.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>
<script src="./js/dashboard.js"></script>