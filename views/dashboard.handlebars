<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="mt-4 new-blog-form">
      <div class="form-group">
        <label for="blog-title">blog title:</label>
        <input
          class="form-input"
          type="text"
          id="blog-title"
          name="blog-title"
        />
      </div>
      <div class="form-group">
        <label for="blog-contents">contents:</label>
        <textarea
          class="form-input"
          id="blog-contents"
          name="blog-contents"
        ></textarea>
      </div>
      <div class="form-group">
        <button class="submitBtn" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
    <div class="col-md-6 blog-list">
      <h3>Current Blogs:</h3>

      {{#each blogs as |blog|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <a href="/blog/{{blog.id}}"><h4>{{blog.post_title}}</h4></a>
          </div>
          <div class="col-md-4">
            <button
              class="btn btn-sm btn-warning edit-btn"
              data-id="{{blog.id}}"
            >EDIT</button>
            <button
              class="btn btn-sm btn-danger delete-btn"
              data-id="{{blog.id}}"
            >DELETE</button>
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>
<script src="./js/dashboard.js"></script>