{{>blog-form}}

  {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Blogs:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.post_title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-warning edit-btn" data-id="{{blog.id}}">EDIT</button>
        <button class="btn btn-sm btn-danger delete-btn" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

